{
  "name": "Einplayer",
  "version": "0.0.1",
  "description": "The one player for the web.",
  "browser_action": {
    "default_icon": "images/pink-cassette-icon.png"
  },
  "background_page" :"backend/einplayer-background.html",
  "content_scripts" : [
    {
      "matches" : ["<all_urls>"],
      "js"      : ["frontend/einplayer-inject-all.js"],
      "css"     : ["frontend/einplayer-inject-all.css"],
      "run_at"  : "document_start"
    }
  ],
  "permissions": ["tabs"]
}
