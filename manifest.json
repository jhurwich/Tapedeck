{
  "name": "Tapedeck",
  "version": "0.1.2",
  "description": "The one player for the web.",
  "background_page" :"backend/background.html",
  "content_scripts" : [
    {
      "matches" : ["<all_urls>"],
      "js"      : ["frontend/tapedeck-inject-all.js",
                   "vendor/jquery-1.6.2.js"],
      "css"     : ["frontend/tapedeck-inject-all.css"],
      "run_at"  : "document_end"
    }
  ],
  "icons":
    {
      "48": "images/cassette-pink-48.png",
      "128": "images/cassette-pink-128.png"
    },
  "permissions": ["tabs", "http://*/*", "unlimitedStorage"],
  "update_url": "http://tape-deck.com/update"
}
